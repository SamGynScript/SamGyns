sudo apt-get purge gnome-online-accounts empathy gnome-games gnome-sudoku aisleriot gnome-mahjongg gnome-mines gnomine unity-webapps-common unity-control-center-signon remmina webbrowser-app landscape-client-ui-install vino gnome-contacts -y deja-dup deja-dup-backend-gvfs gnome-orca onboard onboard-data &&

sudo apt-get autoremove &&

sudo apt-key adv --keyserver pgp.mit.edu --recv-keys 5044912E &&

sudo sh -c 'echo "deb http://linux.dropbox.com/ubuntu/ trusty main" >> /etc/apt/sources.list.d/dropbox.list' &&

wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add - &&

sudo sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' &&

sudo add-apt-repository ppa:libreoffice/ppa -y &&

sudo add-apt-repository ppa:otto-kesselgulasch/gimp -y &&

sudo add-apt-repository ppa:mozillateam/thunderbird-next -y &&

sudo add-apt-repository ppa:webupd8team/java -y &&

sudo apt-get update &&

